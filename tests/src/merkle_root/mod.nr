use dep::keccak256::keccak256;
use dep::merklez::merkle_root::merkle_root;
use dep::merklez::types::{Hash, Leaf, Root};

fn keccak_hash(left: Hash, right: Hash) -> Hash {
    let mut input: [u8; 64] = [0u8; 64];
    for i in 0..32 {
        input[i] = left[i];
        input[i + 32] = right[i];
    }
    keccak256(input, 64u32)
}

